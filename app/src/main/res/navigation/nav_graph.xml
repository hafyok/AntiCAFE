<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <!--<activity
        android:id="@+id/mainActivity"
        android:name="com.example.anticafe.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />-->
    <fragment
        android:id="@+id/roomsFragment"
        android:name="com.example.anticafe.View.RoomsFragment"
        android:label="RoomsFragment"
        tools:layout="@layout/rooms_fragment">
        <action
            android:id="@+id/action_roomsFragment_to_computersFragment"
            app:destination="@id/computersFragment" />
        <action
            android:id="@+id/action_roomsFragment_to_peopleFragment"
            app:destination="@id/peopleFragment" />
    </fragment>
    <fragment
        android:id="@+id/computersFragment"
        android:name="com.example.anticafe.View.ComputersFragment"
        android:label="fragment_computers"
        tools:layout="@layout/fragment_computers" />
    <fragment
        android:id="@+id/peopleFragment"
        android:name="com.example.anticafe.View.PeopleFragment"
        android:label="fragment_people"
        tools:layout="@layout/fragment_people" />
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.anticafe.View.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_roomsFragment"
            app:destination="@id/roomsFragment" />
        <action
            android:id="@+id/action_authFragment_to_webFragment"
            app:destination="@id/webFragment" />
    </fragment>
    <fragment
        android:id="@+id/webFragment"
        android:name="com.example.anticafe.View.WebFragment"
        android:label="WebFragment" >
        <action
            android:id="@+id/action_webFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>